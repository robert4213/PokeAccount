<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="5dp" android:gravity="start">

    <TextView
        android:id="@+id/list_item_account_balance"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:padding="4dp"
        android:text="$0.00"
        android:textSize="28sp"
        android:gravity="center_vertical|end"/>

    <TextView
        android:id="@+id/list_item_account_type"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/list_item_account_balance"
        android:gravity="center_vertical|left"
        android:text="Type"
        android:textSize="22dp" />
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_toStartOf="@+id/list_item_account_type"
        android:layout_marginEnd="10dp"
        android:id="@+id/list_item_account_company"
        ></ImageView>

</RelativeLayout>